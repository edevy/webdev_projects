<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Make site responsive on mobile/tablet -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Movie Search Result</title>
		<link  rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.4/semantic.min.css">
		<link rel="stylesheet" type="text/css" href="/stylesheets/results.css">
	</head>
		<body>
      <div class="ui main text container">
        <div id="title" class="ui huge header">
          Movie List
        </div>
          <div id="box" class="item">
            <form>
              <div id="frame">
                <ul>
                  <% data["Search"].forEach(function(movie){ %>
                    <li>
                      <strong>
                          <%= movie["Title"] %>
                      </strong> 
                      - <%= movie["Year"] %>
                    </li>
                  <% }) %>
                </ul>
                <a id="myBtn" class="ui floated basic white button" href="/search">Search Again!
                  <i class="right chevron icon"></i>
                </a>
              </div>
            </form>
          </div>
        </div>
		</body>
</html>